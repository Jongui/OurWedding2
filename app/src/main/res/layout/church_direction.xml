<?xml version="1.0" encoding="utf-8"?>
<joaogd53.com.br.customViews.DirectionView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/churchDirection"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bgTitleRight"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/imgDirection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/ic_place_marker" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtChurchAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            android:text="@string/churchName"
            android:textColor="@color/mainTextColor"
            android:textSize="16dp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:text="@string/churchAddress"
            android:textStyle="italic"
            android:textSize="14dp"/>
    </LinearLayout>

</joaogd53.com.br.customViews.DirectionView>